<RadzenCard Variant="Variant.Flat">
    <RadzenRow class="mb-4">
        <RadzenColumn Size="12">
            <RadzenText TextStyle="TextStyle.H6" class="rz-display-flex rz-mt-2 rz-my-0">@Title</RadzenText>
        </RadzenColumn>
    </RadzenRow>
    @if (TitleContent != null)
    {
        <RadzenRow class="mb-2">
            <RadzenColumn Size="12">
                @TitleContent
            </RadzenColumn>
        </RadzenRow>
    }
    @if (Content != null)
    {
        <RadzenRow class="mb-2">
            <RadzenColumn Size="12">
                @Content
            </RadzenColumn>
        </RadzenRow>

    }
    @if (Actions != null)
    {
        <RadzenRow class="mb-2">
            <RadzenColumn Size="12">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="@JustifyContentActions" Gap="5px">
                    @Actions
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>

    }


</RadzenCard>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public RenderFragment Content { get; set; } = null!;
    [Parameter]
    public RenderFragment Actions { get; set; } = null!;
    [Parameter]
    public RenderFragment TitleContent { get; set; } = null!;
    [Parameter]
    public JustifyContent JustifyContentActions { get; set; } = JustifyContent.End;


}
