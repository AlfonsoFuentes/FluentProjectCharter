@page "/register"
@layout MainLayout
@attribute [AllowAnonymous]

<EditForm Model="@_registerUserModel" OnValidSubmit="SubmitAsync">

    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <Card Title="Login" width="400px">
        <Content>
            <RadzenStack Orientation="Orientation.Vertical">
                <RadzenRow Gap="2" JustifyContent="JustifyContent.Center">
                    <RadzenColumn SizeXS="12" SizeSM="12">
                        <RadzenText> Already have an account?  <RadzenLink Path="login" Text="Sign In" /></RadzenText>

                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow Gap="2" JustifyContent="JustifyContent.Center">
                    <RadzenColumn SizeXS="12" SizeSM="6">
                        <TextBox Validate="ValidateAsync" @bind-Value="_registerUserModel.FirstName" Label="First Name" AutoCompleteType="AutoCompleteType.Name" />
                        <ValidationMessage For="() => _registerUserModel.FirstName" style="color:red; font-size:x-small;" />

                    </RadzenColumn>
                    <RadzenColumn SizeXS="12" SizeSM="6">
                        <TextBox Validate="ValidateAsync" @bind-Value="_registerUserModel.LastName" Label="Last Name" AutoCompleteType="AutoCompleteType.FamilyName" />
                        <ValidationMessage For="() => _registerUserModel.LastName" style="color:red; font-size:x-small;" />

                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow Gap="2" JustifyContent="JustifyContent.Center">
                    <RadzenColumn SizeXS="12" SizeSM="6">
                        <TextBox Label="E-mail" @bind-Value="_registerUserModel.Email" Validate="ValidateAsync"
                                 AutoCompleteType="AutoCompleteType.Email" />
                        <ValidationMessage For="() => _registerUserModel.Email" style="color:red; font-size:x-small;" />

                    </RadzenColumn>
                    <RadzenColumn SizeXS="12" SizeSM="6">
                        <TextBox Label="Phone Number" @bind-Value="_registerUserModel.PhoneNumber" Validate="ValidateAsync" AutoCompleteType="AutoCompleteType.Tel" />
                        <ValidationMessage For="() => _registerUserModel.PhoneNumber" style="color:red; font-size:x-small;" />
                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow Gap="2" JustifyContent="JustifyContent.Center">
                    <RadzenColumn SizeXS="12" SizeSM="6">
                        <TextBox Validate="ValidateAsync" @bind-Value="_registerUserModel.Password" Label="Password"
                                 AutoCompleteType="AutoCompleteType.CurrentPassword" />
                        <ValidationMessage For="() => _registerUserModel.Password" style="color:red; font-size:x-small;" />


                    </RadzenColumn>
                    <RadzenColumn SizeXS="12" SizeSM="6">
                        <TextBox Validate="ValidateAsync" @bind-Value="_registerUserModel.ConfirmPassword" Label="Confirm Password"
                                 AutoCompleteType="AutoCompleteType.CurrentPassword" />
                        <ValidationMessage For="() => _registerUserModel.ConfirmPassword" style="color:red; font-size:x-small;" />

                    </RadzenColumn>
                </RadzenRow>
            </RadzenStack>

        </Content>
        <Actions>
            <RadzenButton ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Light" Disabled="@(!Validated)" Text="Register"></RadzenButton>

        </Actions>
    </Card>

</EditForm>


