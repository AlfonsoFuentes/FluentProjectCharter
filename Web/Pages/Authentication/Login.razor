@page "/login"

@layout MainLayout
@attribute [AllowAnonymous]


<EditForm Model="@_tokenModel" OnValidSubmit="SubmitAsync">

    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <Card Title="Login">
        <Content>
            <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Normal">
                <RadzenRow>
                    <RadzenColumn SizeXS="12" SizeSM="12">
                        <RadzenText>
                            Don't have an account? <RadzenLink Path="register">Register here</RadzenLink>

                        </RadzenText>
                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow>
                    <RadzenColumn SizeXS="12" SizeSM="12">
                        <TextBox  Label="E-mail" @bind-Value=@_tokenModel.Email AutoCompleteType="AutoCompleteType.Email" Validate="ValidateAsync"></TextBox>
                        <ValidationMessage For="() => _tokenModel.Email" style="color:red; font-size:x-small;" />
                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow>
                    <RadzenColumn SizeXS="12" SizeSM="12">
                        <TextBox Label="Password" @bind-Value="_tokenModel.Password" AutoCompleteType="AutoCompleteType.CurrentPassword" Validate="ValidateAsync"></TextBox>
                        <ValidationMessage For="() => _tokenModel.Password" style="color:red; font-size:x-small;" />

                    </RadzenColumn>
                </RadzenRow>

            </RadzenStack>

        </Content>
        <Actions>
            <RadzenButton ButtonType="ButtonType.Submit"
                          ButtonStyle="ButtonStyle.Light"
                          Disabled="@(!Validated)">Login</RadzenButton>
        </Actions>
    </Card>

</EditForm>

