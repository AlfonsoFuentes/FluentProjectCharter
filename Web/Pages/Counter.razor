@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: <RadzenBadge BadgeStyle="BadgeStyle.Danger">@currentCount</RadzenBadge></p>

<RadzenButton ButtonStyle="ButtonStyle.Light" @onclick="IncrementCount">Click me</RadzenButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
