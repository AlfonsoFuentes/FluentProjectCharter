@page "/UpdateRequirement/{Id:guid}"
<EditTemplate @ref=EditForm TItem="UpdateRequirementRequest" @bind-Model=@Model 
              Title="Edit Requirement">
    <Content>
        <TextArea Label="Name"
                  @bind-Value=@Model.Name
                  Placeholder="Define name"
                  Validate="EditForm.ValidateAsync"></TextArea>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />
    </Content>

</EditTemplate>

@code {
    EditTemplate<UpdateRequirementRequest> EditForm = null!;
}
