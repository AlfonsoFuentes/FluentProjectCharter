@page "/login"
@layout MainLayout
@attribute [AllowAnonymous]


<EditForm Model="@_registerUserModel" OnValidSubmit="SubmitAsync">

    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <FluentStack Orientation="Orientation.Vertical" VerticalGap="2" Style="width:400px" VerticalAlignment="VerticalAlignment.Center" HorizontalAlignment="HorizontalAlignment.Center">
        <FluentGrid AdaptiveRendering="true" Justify="JustifyContent.Center">
            <FluentGridItem xs="12" sm="12">
                <FluentLabel Typo="Typography.H1">
                    <strong> CP Project Management</strong>
                </FluentLabel>
            </FluentGridItem>
            <FluentGridItem xs="12" sm="12">
                <FluentLabel Typo="Typography.H2">
                    Interactive Software to plan and follow projects
                </FluentLabel>
            </FluentGridItem>
            <FluentGridItem xs="12" sm="12">
                <FluentLabel Typo="Typography.H6">
                   Colgate-Palmolive - Cali
                </FluentLabel>
            </FluentGridItem>
            <FluentGridItem xs="12" sm="12">
                <FluentLabel Typo="Typography.H4">
                    Don't have an account? <FluentAnchor Appearance="Appearance.Hypertext" Href="register">Register here</FluentAnchor>
                </FluentLabel>
            </FluentGridItem>
            <FluentGridItem xs="12" sm="12">

                <TextBox Label="E-mail" @bind-Value=@_registerUserModel.Email TextFieldType="TextFieldType.Email" Validate="ValidateAsync"></TextBox>
                <ValidationMessage For="() => _registerUserModel.Email" style="color:red; font-size:x-small;" />
            </FluentGridItem>
            <FluentGridItem xs="12" sm="12">

                <TextBox  Label="Password" @bind-Value="_registerUserModel.Password" TextFieldType="TextFieldType.Password" Validate="ValidateAsync"></TextBox>
                <ValidationMessage For="() => _registerUserModel.Password" style="color:red; font-size:x-small;" />

            </FluentGridItem>
        </FluentGrid>
        <FluentButton Type="ButtonType.Submit"
                      Appearance=Appearance.Accent
                      Disabled="@(!Validated)">Login</FluentButton>
    </FluentStack>


</EditForm>

