@page "/login"
@layout MainLayout
@attribute [AllowAnonymous]


<EditForm Model="@_registerUserModel" OnValidSubmit="SubmitAsync">

    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudStack Spacing="2" Style="width:400px" AlignItems=AlignItems.Center Justify=Justify.Center>
        <MudGrid  Justify="Justify.Center">
            <MudItem xs="12" sm="12">
                <MudField Typo=Typo.h1>
                    <strong> CP Project Management</strong>
                </MudField>
            </MudItem>
            <MudItem xs="12" sm="12">
                <MudField Typo="Typo.h2">
                    Interactive Software to plan and follow projects
                </MudField>
            </MudItem>
            <MudItem xs="12" sm="12">
                <MudField Typo="Typo.h6">
                    Colgate-Palmolive - Cali
                </MudField>
            </MudItem>
            <MudItem xs="12" sm="12">
                <MudField Typo="Typo.h4">
                    Don't have an account? <MudLink Href="/register">Register here</MudLink>
                </MudField>
            </MudItem>
            <MudItem xs="12" sm="12">

                <TextBox Label="E-mail" @bind-Value=@_registerUserModel.Email TextFieldType="TextFieldType.Email" Validate="ValidateAsync"></TextBox>
                <ValidationMessage For="() => _registerUserModel.Email" style="color:red; font-size:x-small;" />
            </MudItem>
            <MudItem xs="12" sm="12">

                <TextBox Label="Password" @bind-Value="_registerUserModel.Password" TextFieldType="TextFieldType.Password" Validate="ValidateAsync"></TextBox>
                <ValidationMessage For="() => _registerUserModel.Password" style="color:red; font-size:x-small;" />

            </MudItem>
        </MudGrid>
        <MudButton ButtonType=ButtonType.Submit
                   Color="Color.Primary"
                   Disabled="@(!Validated)">Login</MudButton>
    </MudStack>


</EditForm>

