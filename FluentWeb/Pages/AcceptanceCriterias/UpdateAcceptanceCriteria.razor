@page "/UpdateAcceptanceCriteria/{Id:guid}/{ProjectId:guid}"

<EditTemplate @ref=EditForm TItem="UpdateAcceptanceCriteriaRequest" @bind-Model=@Model 
              Title="Edit Acceptance Criteria">
    <Content>
        <TextArea Label="Name"
                  @bind-Value=@Model.Name
                  Placeholder="Define name"
                  Validate="EditForm.ValidateAsync"></TextArea>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />
    </Content>

</EditTemplate>

@code {
    EditTemplate<UpdateAcceptanceCriteriaRequest> EditForm = null!;
}
