@page "/UpdateKnownRisk/{Id:guid}/{ProjectId:guid}"
<EditTemplate @ref=EditForm TItem="UpdateKnownRiskRequest" @bind-Model=@Model 
              Title="Edit Known Risk">
    <Content>
        <TextArea Label="Name"
                  @bind-Value=@Model.Name
                  Placeholder="Define name"
                  Validate="EditForm.ValidateAsync"></TextArea>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />
    </Content>

</EditTemplate>

@code {
    EditTemplate<UpdateKnownRiskRequest> EditForm = null!;
}
