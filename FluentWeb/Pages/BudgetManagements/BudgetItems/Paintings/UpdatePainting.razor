@page "/UpdatePaintings/{Id:guid}"

@using Shared.Models.BudgetItems.IndividualItems.Paintings.Requests



<EditTemplate @ref=EditForm TItem="UpdatePaintingRequest" @bind-Model=@Model
              Title="Edit Painting">
    <Content>
        <TextBox Label="Name"
                 @bind-Value=@Model.Name
                 Placeholder="Define name"
                 Validate="EditForm.ValidateAsync"></TextBox>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />

        <NumberField @bind-Value="@Model.UnitaryCost" Label="Unitary Cost, USD" Validate="EditForm.ValidateAsync">

        </NumberField>
        <ValidationMessage For="() => Model.UnitaryCost" style="color:red; font-size:x-small;" />

        <NumberField @bind-Value="@Model.Quantity" Label="Quantity" Validate="EditForm.ValidateAsync"></NumberField>

        <FluentLabel Typo="Typography.Body">Budget: @Model.sBudget</FluentLabel>
    </Content>

</EditTemplate>

@code {
    EditTemplate<UpdatePaintingRequest> EditForm = null!;
}
