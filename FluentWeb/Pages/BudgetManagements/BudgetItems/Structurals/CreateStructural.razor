@page "/CreateStructurals/{ProjectId:guid}"
@using Shared.Models.BudgetItems.Structurals.Requests
<CreateTemplate @ref=CreateForm TItem="CreateStructuralRequest" @bind-Model="@Model"
                Title="Create Structural">
    <Content>
        <TextBox Label="Name"
                  @bind-Value=@Model.Name
                  Placeholder="Define name"
                  Validate="CreateForm.ValidateAsync"></TextBox>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />

           
        <NumberField @bind-Value="@Model.UnitaryCost" Label="Unitary Cost, USD" Validate="CreateForm.ValidateAsync">
           
        </NumberField>
        <ValidationMessage For="() => Model.UnitaryCost" style="color:red; font-size:x-small;" />

        <NumberField @bind-Value="@Model.Quantity" Label="Quantity" Validate="CreateForm.ValidateAsync"></NumberField>
        <ValidationMessage For="() => Model.Quantity" style="color:red; font-size:x-small;" />

        <FluentLabel Typo="Typography.Body">Budget: @Model.sBudget</FluentLabel>
    </Content>

</CreateTemplate>

@code {
    CreateTemplate<CreateStructuralRequest> CreateForm = null!;

}
