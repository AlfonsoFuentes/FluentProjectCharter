@page "/CreateBrands"
<CreateTemplate @ref=CreateForm TItem="CreateBrandRequest" @bind-Model="@Model"
                 Title="Create Brand">
    <Content>
        <TextArea Label="Name"
                  @bind-Value=@Model.Name
                  Placeholder="Define name"
                  Validate="CreateForm.ValidateAsync"></TextArea>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />
    </Content>

</CreateTemplate>

@code {
    CreateTemplate<CreateBrandRequest> CreateForm = null!;

}
