@page "/CreateConstrainst/{ProjectId:guid}"
@page "/CreateConstrainst/{ProjectId:guid}/{DeliverableId:guid}"
<CreateTemplate @ref=CreateForm TItem="CreateConstrainstRequest" @bind-Model="@Model"
                 Title="Create Constraint">
    <Content>
        <TextArea Label="Name"
                  @bind-Value=@Model.Name
                  Placeholder="Define name"
                  Validate="CreateForm.ValidateAsync"></TextArea>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />
    </Content>

</CreateTemplate>

@code {
    CreateTemplate<CreateConstrainstRequest> CreateForm = null!;

}
