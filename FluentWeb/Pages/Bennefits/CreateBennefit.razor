@page "/CreateBennefit/{ProjectId:guid}/{ScopeId:guid}"
<CreateTemplate @ref=CreateForm TItem="CreateBennefitRequest" @bind-Model="@Model"
                 Title="Create Bennefit">
    <Content>
        <TextArea Label="Name"
                  @bind-Value=@Model.Name
                  Placeholder="Define name"
                  Validate="CreateForm.ValidateAsync"></TextArea>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />
    </Content>

</CreateTemplate>

@code {
    CreateTemplate<CreateBennefitRequest> CreateForm = null!;

}
