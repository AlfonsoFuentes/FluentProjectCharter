


<FluentStack Orientation="Orientation.Vertical" Style="width:100%;border:1px solid lightgray;border-radius:5px; padding:4px;">
    <FluentLabel Typo="Typography.Subject" Style="overflow-wrap: break-word;"><strong>Manage Budget items</strong></FluentLabel>

    <FluentStack Orientation=" Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center" HorizontalGap="6">
       


        <FluentButton Id="addA" OnClick="@(()=>AddNewBudgetItem(StaticClass.Alterations.PageName.Create))">A</FluentButton>
        <FluentTooltip Anchor="addA" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Alteration</FluentTooltip>

        <FluentButton Id="addB" OnClick="@(()=>AddNewBudgetItem(StaticClass.Foundations.PageName.Create))">B</FluentButton>
        <FluentTooltip Anchor="addB" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Foundation</FluentTooltip>

        <FluentButton Id="addC" OnClick="@(()=>AddNewBudgetItem(StaticClass.Structurals.PageName.Create))">C</FluentButton>
        <FluentTooltip Anchor="addC" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Structural</FluentTooltip>

        <FluentButton Id="addD" OnClick="@(()=>AddNewBudgetItem(StaticClass.Equipments.PageName.Create))">D</FluentButton>
        <FluentTooltip Anchor="addD" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Equipment</FluentTooltip>

        <FluentButton Id="addV" OnClick="@(()=>AddNewBudgetItem(StaticClass.Valves.PageName.Create))">V</FluentButton>
        <FluentTooltip Anchor="addV" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Valve</FluentTooltip>

        <FluentButton Id="addE" OnClick="@(()=>AddNewBudgetItem(StaticClass.Electricals.PageName.Create))">E</FluentButton>
        <FluentTooltip Anchor="addE" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Electrical</FluentTooltip>

        <FluentButton Id="addF" OnClick="@(()=>AddNewBudgetItem(StaticClass.Pipings.PageName.Create))">F</FluentButton>
        <FluentTooltip Anchor="addF" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Piping</FluentTooltip>

        <FluentButton Id="addG" OnClick="@(()=>AddNewBudgetItem(StaticClass.Instruments.PageName.Create))">G</FluentButton>
        <FluentTooltip Anchor="addG" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Instruments</FluentTooltip>

        <FluentButton Id="addH" OnClick="@(()=>AddNewBudgetItem(StaticClass.EHSs.PageName.Create))">H</FluentButton>
        <FluentTooltip Anchor="addH" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add EHS</FluentTooltip>

        <FluentButton Id="addJ" OnClick="@(()=>AddNewBudgetItem(StaticClass.Paintings.PageName.Create))">J</FluentButton>
        <FluentTooltip Anchor="addJ" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Painting</FluentTooltip>

        <FluentButton Id="addK" OnClick="@(()=>AddNewBudgetItem(StaticClass.Taxs.PageName.Create))">K</FluentButton>
        <FluentTooltip Anchor="addK" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Taxes</FluentTooltip>

        <FluentButton Id="addM" OnClick="@(()=>AddNewBudgetItem(StaticClass.Testings.PageName.Create))">M</FluentButton>
        <FluentTooltip Anchor="addM" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Testing</FluentTooltip>

        <FluentButton Id="addO" OnClick="@(()=>AddNewBudgetItem(StaticClass.EngineeringDesigns.PageName.Create))">O</FluentButton>
        <FluentTooltip Anchor="addO" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Add Engineering Design</FluentTooltip>


        <FluentSpacer />
        <FluentSearch @bind-Value="@nameFilter"
                      @oninput="@((arg)=>nameFilter=arg.Value==null?string.Empty:arg.Value!.ToString())"
                      Placeholder="Search..." />
    </FluentStack>
    <FluentDataGrid Items="@FilteredItems.AsQueryable()"
                    Virtualize="true"
                    ItemSize="46"
                    Style="width:100%"
                    GenerateHeader="GenerateHeaderOption.Sticky"
                    TGridItem="IBudgetItemResponse">
        <PropertyColumn Title="Nomenclatore" Property="@(c => c.Nomenclatore)" Width="15%" />
        <PropertyColumn Title="Tag" Property="@(c => c.Tag)" Width="15%" />
        <PropertyColumn Title="Name" Property="@(c => c.Name)" Width="40%" />
        <PropertyColumn Title="Budget, USD" Property="@(c => c.sBudget)" Tooltip="true" Width="15%" />

        <TemplateColumn Title="Actions" Align="@Align.End" Width="15%">
            <FluentButton Id="@($"edit{context.Id}")" aria-label="Edit item" IconEnd="@(new Icons.Regular.Size16.Edit())" OnClick="@(() => EditBudgetItem(context))" />
            <FluentTooltip Anchor="@($"edit{context.Id}")" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Edit</FluentTooltip>
            <FluentButton Id="@($"delete{context.Id}")" aria-label="Delete item" IconEnd="@(new Icons.Regular.Size16.Delete())" OnClick="@(() => Delete(context))" />
            <FluentTooltip Anchor="@($"delete{context.Id}")" HideTooltipOnCursorLeave="true" Position=TooltipPosition.Top Delay=200>Delete</FluentTooltip>

        </TemplateColumn>
    </FluentDataGrid>



</FluentStack>

