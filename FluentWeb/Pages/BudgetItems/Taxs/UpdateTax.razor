@page "/UpdateTaxs/{Id:guid}/{ProjectId:guid}"
@using Shared.Models.BudgetItems.Taxs.Requests



<EditTemplate @ref=EditForm TItem="UpdateTaxRequest" @bind-Model=@Model
              Title="Edit Tax">
    <Content>
        <TextBox Label="Name"
                 @bind-Value=@Model.Name
                 Placeholder="Define name"
                 Validate="EditForm.ValidateAsync"></TextBox>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />

   
        <NumberField @bind-Value="@Model.Budget" Label="Budget, USD" Validate="EditForm.ValidateAsync"></NumberField>
        <ValidationMessage For="() => Model.Budget" style="color:red; font-size:x-small;" />
   
    </Content>

</EditTemplate>

@code {
    EditTemplate<UpdateTaxRequest> EditForm = null!;
}
