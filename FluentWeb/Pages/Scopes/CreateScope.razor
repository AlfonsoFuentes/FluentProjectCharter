@page "/CreateScope/{CaseId:guid}/{ProjectId:guid}"
<CreateTemplate @ref=CreateForm TItem="CreateScopeRequest" @bind-Model="@Model"
                 Title="Create Scope">
    <Content>
        <TextArea Label="Name"
                  @bind-Value=@Model.Name
                  Placeholder="Define name"
                  Validate="CreateForm.ValidateAsync"></TextArea>
        <ValidationMessage For="() => Model.Name" style="color:red; font-size:x-small;" />
    </Content>

</CreateTemplate>

@code {
    CreateTemplate<CreateScopeRequest> CreateForm = null!;

}
