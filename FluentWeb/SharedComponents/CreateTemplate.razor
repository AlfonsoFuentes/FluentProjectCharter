@typeparam TItem
<EditForm Model="@Model" OnValidSubmit="SaveAsync" style="width:100%">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
   
    <Card Title="@Title">
        <Content>
            @Content
        </Content>
        <Actions>

            <MudButton  ButtonType=ButtonType.Submit Color=Color.Primary Disabled="@(!Validated)">Save</MudButton >
            <MudButton  OnClick="Cancel">Cancel</MudButton >
        </Actions>
    </Card>

</EditForm>
