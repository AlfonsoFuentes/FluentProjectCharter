<FluentCard Style="width:100%">
    <FluentStack Orientation="Orientation.Vertical">
        <FluentLabel Typo="Typography.H6">@Title</FluentLabel>




        @if (TitleContent != null)
        {
            @TitleContent
        }
        @if (Content != null)
        {
            @Content

        }
        @if (Actions != null)
        {
            <FluentStack Orientation="Orientation.Horizontal">
                @Actions
            </FluentStack>

        }
    </FluentStack>

</FluentCard>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public RenderFragment Content { get; set; } = null!;
    [Parameter]
    public RenderFragment Actions { get; set; } = null!;
    [Parameter]
    public RenderFragment TitleContent { get; set; } = null!;



}
