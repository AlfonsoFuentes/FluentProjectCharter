<FluentCard AreaRestricted="false" Style="width:100%;overflow:auto;padding:4px;">
    <FluentStack Orientation="Orientation.Vertical" Class="stack">
        <FluentLabel Typo="Typography.H6">@Title</FluentLabel>

        @if (TitleContent != null)
        {
           @TitleContent
        }
        @if (Content != null)
        {
            @Content
        }
        @if (Actions != null)
        {
            <FluentStack Orientation="Orientation.Horizontal" style="padding:4px;">
                @Actions
            </FluentStack>
        }
    </FluentStack>
</FluentCard>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public RenderFragment? Content { get; set; }

    [Parameter]
    public RenderFragment? Actions { get; set; }

    [Parameter]
    public RenderFragment? TitleContent { get; set; }
}
